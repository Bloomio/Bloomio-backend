{
  "config": {
    "target": "http://bloomio.us",
    "phases": [
      {
       "duration": 5,
       "arrivalRate": 500
      },
      {
        "duration": 5,
        "arrivalRate": 500
      }
    ],
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/signup",
            "json": {
              "username": "{{ username }}",
              "email": "{{ email }}",
              "password": "{{ password }}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
        ,{
          "post": {
            "url": "/profile",
            "headers": {
              "Authorization": "Bearer {{ token }}"
            },
            "json": {
              "firstName": "{{ firstName }}",
              "avatar": "{{ avatar }}",
              "phoneNumber": "{{ phoneNumber }}",
              "location": "{{ location }}",
              "googleID": "{{ googleID }}"
            }
          }
        }
      ]
    }
  ]
}